<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- 다크모드 해제 -->
    <style name="Base.Theme.BalPyo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>   <!-- 상태바 아이콘(true: 검정 / false: 흰색) -->
    </style>

    <style name="Theme.BalPyo" parent="Base.Theme.BalPyo" />

    <style name="AppTheme.NumberPicker" parent="Base.Theme.BalPyo">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text</item>
    </style>
</resources>